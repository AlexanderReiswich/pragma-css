|-----------------------------------------------------------------------------------------------------------------------
| Corner radius
|-----------------------------------------------------------------------------------------------------------------------
|
| Corner radius is used for classes that set the border-radius property.
|
*/

$rounded-s = 3px
$rounded-m = 6px
$rounded-l = 10px

/*
|-----------------------------------------------------------------------------------------------------------------------
| Horizontal rule
|-----------------------------------------------------------------------------------------------------------------------
*/

$hr-style = 1px solid rgba(145, 205, 220, .2)
$hr-s = 1px
$hr-m = 3px
$hr-l = 5px
$hr-short = 60px
$hr-negative = rgba(255, 255, 255, 0.4)

/*
|-----------------------------------------------------------------------------------------------------------------------
| Grid
|-----------------------------------------------------------------------------------------------------------------------
*/

$grid-separation = 2px solid rgba(53, 73, 94, .08)
$grid-gap-s = 5px
$grid-gap-m = 10px
$grid-gap-l = 20px

