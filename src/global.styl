$big-text-transform = none
$big-line-height = $loosen-line-height-s
$big-margin = 0 0 $offset-m 0
$big-color = $default-color

/* Small text */
$small-font-size = $font-size-s
$small-font-weight = $font-weight-regular
$small-letter-spacing = $extend-letter-spacing-s
$small-text-transform = none
$small-line-height = $tighten-line-height-s
$small-margin = 0 0 $offset-m 0
$small-color = $soft

/* Label */
$label-font-size = $font-size-s
$label-font-weight = $font-weight-bold
$label-letter-spacing = $extend-letter-spacing-l
