input_border = 3px solid light
input_corner_radius = 6px
input_font_size = standard_font_size
input_line_height = 1
input_padding = 12px 10px
input_padding_narrow = 6px 10px
input_transition = all 0.2s
input_disabled_color = pale
input_disabled_border_color = light

/* Form input hover state */
input_hover_color = darken(dark, 30)
input_hover_border_color = pale

/* Form input focus state */
input_focus_color = dark
input_focus_border_color = primary

/*
|-----------------------------------------------------------------------------------------------------------------------
| Button
|-----------------------------------------------------------------------------------------------------------------------
*/

/* Base button */
btn_corner_radius = 6px
btn_font_size = font_size
btn_line_height = 1
btn_padding = 12px 18px
btn_transition = all .3s ease
btn_letter_spacing = extend_letter_spacing_l
btn_text_transform = uppercase

/* Base button regular state */
btn_color = c_white
btn_bg = primary
btn_border = 3px solid primary
btn_shadow = none
btn_filter = none

/* Base button focus state */
btn_focus_color = c_white
btn_focus_bg = primary
btn_focus_border_color = dark
btn_focus_shadow = none
btn_focus_filter = none

/* Base button hover state */
btn_hover_color = c_white
btn_hover_bg = dark
btn_hover_border_color = dark
btn_hover_shadow = none
btn_hover_filter = none

/* Base button active state */
btn_active_color = c_white
btn_active_bg = dark
btn_active_border_color = dark
btn_active_shadow = none
btn_active_filter = contrast(120%) saturate(130%) brightness(80%)

/* Base button disabled */
btn_disabled_color = soft
btn_disabled_bg = pale
btn_disabled_border_color = pale
btn_shadow = none
btn_filter = none

