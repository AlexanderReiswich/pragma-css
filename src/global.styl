$btn-bg = $primary
$btn-border = 3px solid $primary
$btn-shadow = none
$btn-filter = none

/* Base button focus state */
$btn-focus-color = $white
$btn-focus-bg = $primary
$btn-focus-border-color = $dark
$btn-focus-shadow = none
$btn-focus-filter = none

/* Base button hover state */
$btn-hover-color = $white
$btn-hover-bg = $dark
$btn-hover-border-color = $dark
$btn-hover-shadow = none
$btn-hover-filter = none

/* Base button active state */
$btn-active-color = $white
$btn-active-bg = $dark
$btn-active-border-color = $dark
$btn-active-shadow = none
$btn-active-filter = contrast(120%) saturate(130%) brightness(80%)

/* Base button disabled */
$btn-disabled-color = $soft
$btn-disabled-bg = $pale
$btn-disabled-border-color = $pale
$btn-disabled-shadow = none
$btn-disabled-filter = none

/*
|-----------------------------------------------------------------------------------------------------------------------
| Size control
|-----------------------------------------------------------------------------------------------------------------------
|
| The following classes give you control over the width and height of buttons and input fields.
|
*/

