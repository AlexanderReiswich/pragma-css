shadow_m = 0 5px 30px rgba(50, 116, 165, 0.18)
shadow_l = 0 0 150px rgba(50, 116, 165, 0.2)

/*
|-----------------------------------------------------------------------------------------------------------------------
| Scale on hover
|-----------------------------------------------------------------------------------------------------------------------
*/
scale_on_hover_s = 1.05
scale_on_hover_m = 1.1
scale_on_hover_l = 1.2

/*
|-----------------------------------------------------------------------------------------------------------------------
| Transitions
|-----------------------------------------------------------------------------------------------------------------------
*/
transition_xs = .07s
transition_s = .12s
transition_m = .2s
transition_l = .4s
transition_xl = .8s

/*
|-----------------------------------------------------------------------------------------------------------------------
| Corner radius
|-----------------------------------------------------------------------------------------------------------------------
|
| Corner radius is used for classes that set the border-radius property.
|
*/
rounded_s = 3px
rounded_m = 6px
rounded_l = 10px

/*
|-----------------------------------------------------------------------------------------------------------------------
| Horizontal rule
|-----------------------------------------------------------------------------------------------------------------------
*/
hr_style = 1px solid rgba(145, 205, 220, .2)
hr_s = 1px
hr_m = 3px
hr_l = 5px
hr_short = 60px
hr_negative = rgba(255, 255, 255, 0.4)

/*
|-----------------------------------------------------------------------------------------------------------------------
| Grid
|-----------------------------------------------------------------------------------------------------------------------
*/
grid_separation = 2px solid light
grid_gap_s = 5px
grid_gap_m = 10px
grid_gap_l = 20px

/*
|-----------------------------------------------------------------------------------------------------------------------
| Tables
|-----------------------------------------------------------------------------------------------------------------------
*/
table_th_border = 3px solid pale
table_td_border = 1px solid light
table_row_hover_bg = lighten(light, 3)
table_th_color = dark
table_zebra_bg = lighten(light, 2)

/*
|-----------------------------------------------------------------------------------------------------------------------
| Text styles
|-----------------------------------------------------------------------------------------------------------------------
*/

/* Hero text */
hero_text_font_size = font_size_4xl
hero_text_font_weight = font_weight_bold
hero_text_letter_spacing = extend_letter_spacing_m
hero_text_text_transform = uppercase
hero_text_line_height = tighten_line_height_l
hero_text_margin = 0 0 offset_l 0

/* Headline */
headline_font_size = font_size_3xl
headline_font_weight = font_weight_bold
headline_letter_spacing = extend_letter_spacing_m
headline_text_transform = uppercase
headline_line_height = tighten_line_height_m
headline_margin = 0 0 offset_l 0

/* Title */
title_font_size = font_size_2xl
title_font_weight = font_weight_bold
title_letter_spacing = extend_letter_spacing_s
title_text_transform = none
title_line_height = tighten_line_height_s
title_margin = 0 0 offset_l 0

/* Subtitle */
subtitle_font_size = font_size_xl
subtitle_font_weight = font_weight_bold
subtitle_letter_spacing = extend_letter_spacing_s
subtitle_text_transform = none
subtitle_line_height = standard_line_height
subtitle_margin = 0 0 offset_m 0

/* Big text */
big_font_size = font_size_l
big_font_weight = font_weight_regular
big_letter_spacing = extend_letter_spacing_s
big_text_transform = none
big_line_height = loosen_line_height_s
big_margin = 0 0 offset_m 0

/* Small text */
small_font_size = font_size_s
small_font_weight = font_weight_regular
small_letter_spacing = extend_letter_spacing_s
small_text_transform = none
small_line_height = tighten_line_height_s
small_margin = 0 0 offset_m 0
small_color = soft

/* Label */
label_font_size = font_size_s
label_font_weight = font_weight_bold
label_letter_spacing = extend_letter_spacing_l
label_text_transform = uppercase
label_line_height = tighten_line_height_s
label_margin = 0 0 offset_xs 0
label_color = soft

/*
|-----------------------------------------------------------------------------------------------------------------------
| Form inputs
|-----------------------------------------------------------------------------------------------------------------------
*/
