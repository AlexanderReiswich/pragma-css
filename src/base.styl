      color $primary
      &:hover, &.blank.primary:hover
        color $primary-hover
  if $colors.secondary
    &.white-bg.secondary, &.blank.secondary
      color $secondary
      &:hover, &.blank.secondary:hover
        color $secondary-hover
  if $colors.tertiary
    &.white-bg.tertiary, &.blank.tertiary
      color $tertiary
      &:hover, &.blank.tertiary:hover
        color $tertiary-hover
  if $colors.dark
    &.white-bg.dark, &.blank.dark
      color $dark-forced
      &:hover, &.blank.dark:hover
        color $dark-hover
  if $colors.muted
    &.white-bg.muted, &.blank.muted
      color $muted-forced
