      color white
      background $tertiary
      &:focus
        border-color $tertiary-hover
      &:hover
        background $tertiary-hover
  if $colors.dark
    &.dark-bg
      color white
      background $dark
      &:focus
        border-color $dark-hover
      &:hover
        background $dark-hover
  if $colors.muted
    &.muted-bg
      color white
      background $muted
      &:hover
        background $muted-hover
      &:focus
        border-color $muted-hover
  if $colors.subtle
    &.subtle-bg
      color $dark-forced
      background $subtle
      &:hover
        background $subtle-hover
      &:focus
        border-color $dark-forced
  if $colors.light
    &.light-bg
      color $dark-forced
      background $light
      &:hover
        background $light-hover
      &:focus
        border-color $light-hover
  if $colors.black
    &.black-bg
      color white
      background $black
      &:hover
        background $black-hover
      &:focus
        border-color $black-hover
  if $colors.red
    &.red-bg
      color white
      background $red
      &:hover
        background $red-hover
      &:focus
        border-color $red-hover
  if $colors.orange
    &.orange-bg
      color white
      background $orange
      &:hover
        background $orange-hover
      &:focus
        border-color $orange-hover
  if $colors.green
    &.green-bg
      color white
      background $green
      &:hover
        background $green-hover
      &:focus
        border-color $green-hover
  if $colors.yellow
    &.yellow-bg
      color $dark-forced
      background $yellow
      &:hover
        background $yellow-hover
      &:focus
        border-color $yellow-hover
  if $colors.blue
    &.blue-bg
      color white
      background $blue
      &:hover
        background $blue-hover
      &:focus
        border-color $blue-hover
  if $colors.violet
    &.violet-bg
      color white
      background $violet
      &:hover
        background $violet-hover
      &:focus
        border-color $violet-hover
  if $colors.white
