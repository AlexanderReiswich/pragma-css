/*
 * PragmaCSS / base.styl
 * =====================
 *
 * This stylesheet offers solid base classes for the most essential ui elements, such as form elements and buttons.
 * Classes from style.css can be used to further customize them.
 *
 */


/* HTML
----------------------------------------------------------------------------------------------------------------------*/
div
  box-sizing border-box

body
  margin 0

html, body
  background-color $body-background
  font $font-weight-regular $default-font-size / $default-line-height $primary-font
  color $default-color
  -webkit-text-size-adjust 100%
  letter-spacing $default-letter-spacing

a
  background-color transparent
  outline none
  color $link-color
  text-decoration $link-decoration
  transition $link-transition
  &:hover
    color $link-color-hover
    -webkit-tap-highlight-color transparent
    text-decoration none

h1, h2, h3, h4, h5, h6
  font-weight $font-weight-regular
  font-size $default-font-size
  line-height $default-line-height
  margin 0

p
  margin 0
  line-height $paragraph-line-height

i, em
  font-style italic

b, strong
  font-weight $font-weight-bold

abbr[title]
  border-bottom none

sub,
sup
  font-size 75%
  line-height 0
  position relative
  vertical-align baseline

sub
  bottom -0.25em

sup
  top -0.5em

img
  border-style none

button,
input,
optgroup,
select,
textarea
  font-family inherit
  font-size 100%
  line-height $default-line-height
  color $dark
  border none
  background transparent
  outline none
  margin 0

button
  border none
  background transparent
  outline none
  &:hover
    cursor pointer
  &:focus
    outline none

button,
input
  overflow visible

button,
select
  text-transform none

button,
[type="button"],
[type="reset"],
[type="submit"]
  -webkit-appearance none

button::-moz-focus-inner,
[type="button"]::-moz-focus-inner,
[type="reset"]::-moz-focus-inner,
[type="submit"]::-moz-focus-inner
  border-style none
  padding 0

progress
  vertical-align baseline

textarea
  overflow auto

[type="checkbox"],
[type="radio"]
  box-sizing border-box
  padding 0

[type="number"]::-webkit-inner-spin-button,
[type="number"]::-webkit-outer-spin-button
  height auto

[type="search"]
  -webkit-appearance textfield
  outline 0

[type="search"]::-webkit-search-decoration
  -webkit-appearance none

::-webkit-file-upload-button
  -webkit-appearance button
  font inherit

details
  display block

summary
  display list-item

template
  display none

[hidden]
  display none

/* Block-Quote
----------------------------------------------------------------------------------------------------------------------*/
blockquote {
  font $blockquote-font-weight $blockquote-font-size / $blockquote-font-line-height $blockquote-font-family
  font-style $blockquote-font-style
  letter-spacing $blockquote-letter-spacing
  color $blockquote-color
  margin $blockquote-margin
  padding $blockquote-padding
  overflow-wrap break-word
}

/* Lists
----------------------------------------------------------------------------------------------------------------------*/
ol
  list-style-type decimal
  padding 0

ul
  list-style-type circle
  padding 0
  li
    margin-bottom $offset-xs
    li
      list-style-type square

ul.inline-list
  list-style none
  li
    display inline-block
    margin-bottom 0
    margin-left 0
    li
      list-style none

dt
  font-weight $font-weight-bold

dd, li
  margin-left $offset-s

dd > *, li > *
  margin-top 0


/* Horizontal rule
----------------------------------------------------------------------------------------------------------------------*/
hr
  background none
  border none
  border-bottom $hr-style
  width auto
  height 0
  overflow hidden
  box-sizing content-box
  &.dotted
    border-style none
    border-bottom-style dashed
  &.dashed
    border-style none
    border-bottom-style dashed
  &.s
    border-width $hr-s
  &.m
    border-width $hr-m
  &.l
    border-width $hr-l
  &.short
    width $hr-short

.inverted hr
  border-bottom-color $hr-inverted


/* Tables
----------------------------------------------------------------------------------------------------------------------*/
table
  display table
  border-collapse collapse
  text-align left
  width 99.9%
  tr
    th
      color $table-th-color
      font-weight $font-weight-bold
      padding 10px 8px
      border-bottom $table-th-border
    td
      padding 10px 8px
      border-bottom $table-td-border
  tbody tr:last-child
    td
      border-bottom none
  &.zebra
    tr:nth-of-type(even) td
      background-color $table-zebra-bg
  &.hoverable
    tbody tr:hover td
      background-color $table-row-hover-bg
  &.table-fixed
    table-layout fixed

table tr td:first-of-type,
table tr th:first-of-type
  padding-left 0

table tr td:last-of-type,
table tr th:last-of-type
  padding-right 0


/* Forms
----------------------------------------------------------------------------------------------------------------------*/

// Placeholders
::-webkit-input-placeholder
  color $placeholder-color

:-moz-placeholder
  color $placeholder-color

::-moz-placeholder
  color $placeholder-color

:-ms-input-placeholder
  color $placeholder-color

// Fieldsets
fieldset
  border none
  padding 0
  margin 0
  legend
    width 100%
    box-sizing border-box
    color inherit
    display table
    max-width 100%
    padding 0
    white-space normal

// Inputs
input,
textarea,
select
  background-color $input-bg
  border $input-border
  border-radius $input-corner-radius
  outline none
  width 100%
  font-size $input-font-size
  line-height $input-line-height
  box-shadow none
  box-sizing border-box
  transition $input-transition

textarea
  overflow-y hidden
  resize vertical
  transition height 0s, width 0s
  line-height $default-line-height

input:hover,
textarea:hover,
select:hover
  color $input-hover-color
  border-color $input-hover-border-color

input:focus,
textarea:focus,
select:focus
  color $input-focus-color
  border-color $input-focus-border-color

input:disabled,
textarea:disabled,
select:disabled
  background-color $input-disabled-bg
  color $input-disabled-color
  border-color $input-disabled-border-color
  opacity .5

input:disabled:hover,
textarea:disabled:hover,
select:disabled:hover
  color $input-disabled-color
  border-color $input-disabled-border-color

// Inverted inputs
.inverted input,
.inverted textarea,
.inverted select
  color $input-color-inverted
  background-color $input-bg-inverted
  border-color $input-border-color-inverted

.inverted input:hover,
.inverted textarea:hover,
.inverted select:hover
  color $input-hover-color-inverted
  border-color $input-hover-border-color-inverted

.inverted input:focus,
.inverted textarea:focus,
.inverted select:focus
  color $input-focus-color-inverted
  border-color $input-focus-border-color-inverted

.inverted input:disabled,
.inverted textarea:disabled,
.inverted select:disabled
  background-color $input-disabled-bg-inverted
  color $input-disabled-color-inverted
  border-color $input-disabled-border-color-inverted

.inverted select option
  color $default-color

.inverted input:disabled:hover,
.inverted textarea:disabled:hover,
.inverted select:disabled:hover
  color $input-disabled-color-inverted
  border-color $input-disabled-border-color-inverted

.inverted ::-webkit-input-placeholder
  color $placeholder-color-inverted

.inverted :-moz-placeholder
  color $placeholder-color-inverted

.inverted ::-moz-placeholder
  color $placeholder-color-inverted

.inverted :-ms-input-placeholder
  color $placeholder-color-inverted


/* Select
----------------------------------------------------------------------------------------------------------------------*/
.select
  position relative

.select select
  -webkit-appearance none
  -moz-appearance none
  appearance none

.select .select-indicator
  position absolute
  width 17px
  height 12px
  right 16px
  top 50%
  margin-top -6px
  transition cubic-bezier(0,.9,.45,1) all $transition-m

.select .select-indicator:after,
.select .select-indicator:before
  content ''
  position absolute
  width 4px
  height 12px
  left 8px
  top 0
  border-radius 4px
  background $subtle-forced
  transform-origin bottom
  transition cubic-bezier(0,.9,.45,1) all $transition-m

.select .select-indicator:before
  transform rotate(-45deg)

.select .select-indicator:after
  transform rotate(45deg) translate(-2px, 2px)

.select:hover select:not(:disabled) + .select-indicator:after,
.select:hover select:not(:disabled) + .select-indicator:before,
.select:focus select:not(:disabled) + .select-indicator:after,
.select:focus select:not(:disabled) + .select-indicator:before
  background-color $muted-forced

.select select:disabled + .select-indicator
  opacity .5

.inverted .select .select-indicator:after,
.inverted .select .select-indicator:before
  background $muted-forced

.inverted .select:hover select:not(:disabled) + .select-indicator:after,
.inverted .select:hover select:not(:disabled) + .select-indicator:before,
.inverted .select:focus select:not(:disabled) + .select-indicator:after,
.inverted .select:focus select:not(:disabled) + .select-indicator:before
  background $subtle-forced


/* Input icon
----------------------------------------------------------------------------------------------------------------------*/
.input-icon
  position relative

.input-icon input
  padding-left $default-font-size + ($size-m * 2) + ($input-border * 2)

.input-icon > :not(input)
  position absolute
  display flex
  align-items center
  justify-content center
  width $default-font-size + ($size-m * 2) + ($input-border * 2)
  top 0
  bottom 0
  left 0

.input-icon input + div > [class*='tico-'] span,
.input-icon input + div > [class*='tico-'] span:before
.input-icon input + div > [class*='tico-'] span:after
  color $muted-forced
  border-color $muted-forced
  background-color $muted-forced

.input-icon input:hover + div > [class*='tico-'] span,
.input-icon input:hover + div > [class*='tico-'] span:before
.input-icon input:hover + div > [class*='tico-'] span:after
  color $dark-forced
  border-color $dark-forced
  background-color $dark-forced

// Inverted inputs
.inverted .input-icon input:hover + div > [class*='tico-'] span,
.inverted .input-icon input:hover + div > [class*='tico-'] span:before
.inverted .input-icon input:hover + div > [class*='tico-'] span:after
  color $light-forced
  border-color $light-forced
  background-color $light-forced

.input-icon input:focus + div > [class*='tico-'] span,
.input-icon input:focus + div > [class*='tico-'] span:before
.input-icon input:focus + div > [class*='tico-'] span:after,
.inverted .input-icon input:focus + div > [class*='tico-'] span,
.inverted .input-icon input:focus + div > [class*='tico-'] span:before
.inverted .input-icon input:focus + div > [class*='tico-'] span:after
  color $primary
  border-color $primary
  background-color $primary

.input-icon [class^='spinner'],
.input-icon [class*=' spinner']
  top 0


/* Checkbox and Radio
----------------------------------------------------------------------------------------------------------------------*/
.checkbox,
.radio
  font-weight $font-weight-regular
  letter-spacing $extend-letter-spacing-s
  text-transform none

.checkbox *,
.radio *
  vertical-align middle

.checkbox input[type=checkbox],
.radio input[type=radio]
  position fixed
  opacity 0
  width 10px
  height 10px
  z-index -9

.checkbox-indicator,
.radio-indicator,
.switch-indicator
  position relative
  display inline-block
  box-sizing content-box
  top -2px
  width 20px
  height 20px
  margin-right $indicator-gap
  background-color $input-bg
  border $indicator-border
  border-radius $input-corner-radius
  transition $input-transition

// Checkbox indicator
.checkbox-indicator:before,
.checkbox-indicator:after
  position absolute
  content ''
  width 5px
  border-radius $transformicon-corner-radius
  background $primary
  transition .2s all cubic-bezier(0,.9,.45,1)
  transform-origin bottom
  opacity 0

.checkbox-indicator:before
  transform rotate(-45deg) scaleY(.2)
  height 10px
  left 7px
  top 5px

.checkbox-indicator:after
  transform rotate(45deg) scaleY(.2)
  height 23px
  left 5px
  top -7px

.checkbox input[type=checkbox]:checked + .checkbox-indicator:before
  transform rotate(-45deg) scaleY(1)
  opacity 1

.checkbox input[type=checkbox]:checked + .checkbox-indicator:after
  transform rotate(45deg) scaleY(1)
  opacity 1

.checkbox input[type=checkbox]:hover + .checkbox-indicator,
.radio input[type=radio]:hover + .radio-indicator
  border-color $indicator-hover-border-color

.checkbox input[type=checkbox]:focus + .checkbox-indicator,
.radio input[type=radio]:focus + .radio-indicator
  border-color $indicator-focus-border-color

// Switch indicator
.switch-indicator
  top -2px
  width 36px
  height 20px
  border-radius 30px

.switch-indicator:before
  display none

.switch-indicator:after
  position absolute
  content ''
  width 16px
  height 16px
  top 2px
  left 2px
  border-radius 100%
  background $subtle-forced
  transition .4s all cubic-bezier(0,.9,.45,1)
  transform-origin center

.checkbox input[type=checkbox]:checked + .switch-indicator:after
  background $primary
  border-color $primary
  transform translate(16px, 0)

.checkbox input[type=checkbox]:hover + .switch-indicator,
.radio input[type=radio]:hover + .radio-indicator
  border-color $indicator-hover-border-color

.checkbox input[type=checkbox]:focus + .switch-indicator,
.radio input[type=radio]:focus + .radio-indicator
  border-color $indicator-focus-border-color

// Radio indicator
.radio-indicator
  border-radius 100%

.radio-indicator:before
  position absolute
  content ''
  width 14px
  height 14px
  top 3px
  left 3px
  background $primary
  border-radius 100%
  transition .4s all cubic-bezier(0,.9,.45,1)
  opacity 0
  transform scale(.2)

.radio input[type=radio]:checked + .radio-indicator:before
  opacity 1
  transform scale(1)

// Checkbox and Radio size-controls
.checkbox-indicator.size-xs,
.radio-indicator.size-xs,
.switch-indicator.size-xs
  transform scale(0.6)
  margin -3px $indicator-gap -3px -4px

.checkbox-indicator.size-s,
.radio-indicator.size-s,
.switch-indicator.size-s
  transform scale(0.77)
  margin -2px $indicator-gap -2px -2px

.checkbox-indicator.size-m,
.radio-indicator.size-m,
.switch-indicator.size-m
  transform scale(1)

.checkbox-indicator.size-l,
.radio-indicator.size-l,
.switch-indicator.size-l
  transform scale(1.23)
  margin 5px ($indicator-gap + 20%) 5px 3px

.checkbox-indicator.size-xl,
.radio-indicator.size-xl,
.switch-indicator.size-xl
  transform scale(1.6)
  margin 5px ($indicator-gap + 80%) 5px 3px

// Disabled states
.checkbox input[type=checkbox]:disabled + .checkbox-indicator,
.checkbox input[type=checkbox]:disabled + .switch-indicator,
.radio input[type=radio]:disabled + .radio-indicator
  pointer-events none
  background $input-disabled-bg
  opacity .5

.checkbox input[type=checkbox]:disabled + .checkbox-indicator:before,
.radio input[type=radio]:disabled + .radio-indicator:before
  background $input-disabled-border-color

.checkbox input[type=checkbox]:disabled + .checkbox-indicator:after,
.checkbox input[type=checkbox]:disabled + .switch-indicator:after,
.radio input[type=radio]:disabled + .radio-indicator:after
  background $input-disabled-border-color

.checkbox input[type=checkbox]:disabled:hover + .checkbox-indicator,
.checkbox input[type=checkbox]:disabled:hover + .switch-indicator,
.radio input[type=radio]:disabled:hover + .radio-indicator
  border-color $input-disabled-border-color

// Inverted inputs
.inverted .checkbox-indicator,
.inverted .radio-indicator,
.inverted .switch-indicator
  background-color $input-bg-inverted
  border-color $indicator-border-color-inverted

.inverted .checkbox input[type=checkbox]:hover + .checkbox-indicator,
.inverted .radio input[type=radio]:hover + .radio-indicator
  border-color $indicator-hover-border-color-inverted

.inverted .checkbox input[type=checkbox]:focus + .checkbox-indicator,
.inverted .radio input[type=radio]:focus + .radio-indicator
  border-color $indicator-focus-border-color-inverted

.inverted .switch-indicator:after
  background $muted-inverted

.inverted .checkbox input[type=checkbox]:hover + .switch-indicator,
.inverted .radio input[type=radio]:hover + .radio-indicator
  border-color $indicator-hover-border-color-inverted

.inverted .checkbox input[type=checkbox]:focus + .switch-indicator,
.inverted .radio input[type=radio]:focus + .radio-indicator
  border-color $indicator-focus-border-color-inverted

.inverted .checkbox input[type=checkbox]:disabled + .checkbox-indicator,
.inverted .checkbox input[type=checkbox]:disabled + .switch-indicator,
.inverted .radio input[type=radio]:disabled + .radio-indicator
  border-color $input-disabled-border-color-inverted
  background $input-disabled-bg-inverted

.inverted .checkbox input[type=checkbox]:disabled + .checkbox-indicator:before,
.inverted .radio input[type=radio]:disabled + .radio-indicator:before
  background $input-disabled-border-color-inverted

.inverted .checkbox input[type=checkbox]:disabled + .checkbox-indicator:after,
.inverted .checkbox input[type=checkbox]:disabled + .switch-indicator:after,
.inverted .radio input[type=radio]:disabled + .radio-indicator:after
  background $input-disabled-border-color-inverted

.inverted .checkbox input[type=checkbox]:disabled:hover + .checkbox-indicator,
.inverted .checkbox input[type=checkbox]:disabled:hover + .switch-indicator,
.inverted .radio input[type=radio]:disabled:hover + .radio-indicator
  border-color $input-disabled-border-color-inverted


